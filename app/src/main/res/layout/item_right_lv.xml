<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:padding="5dp"
    android:background="@drawable/item_selector"
    android:layout_width="match_parent"
    android:layout_height="100dp">
    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/id_r_i_food_logo"
        android:scaleType="centerCrop"
        app:riv_corner_radius="5dp"
        app:riv_oval="false"
        android:layout_width="75dp"
        android:layout_height="75dp" />
    <RelativeLayout
        android:layout_marginLeft="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="80dp">
        <TextView
            android:id="@+id/id_r_i_food_name_tv"
            android:text="菜品名称"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_centerVertical="true"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/type1"
                android:text="lable1"
                android:textSize="9sp"
                android:textColor="#666666"
                android:alpha="0.5"
                android:background="#D3D3D3"
                android:padding="2dp"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <RelativeLayout
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="25dp">
            <LinearLayout
                android:layout_centerVertical="true"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="25dp">
                <TextView
                    android:id="@+id/id_r_i_food_price_tv"
                    android:text="￥165"
                    android:textSize="13sp"
                    android:textColor="#DA4545"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:gravity="right|center_vertical"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_width="match_parent"
                android:layout_height="25dp">
                <TextView
                    android:id="@+id/id_r_i_food_jin_tv"
                    android:clickable="true"
                    android:gravity="center"
                    android:visibility="visible"
                    android:textStyle="bold"
                    android:background="@mipmap/minus_icon"
                    android:layout_width="20dp"
                    android:layout_height="20dp" />
                <TextView
                    android:id="@+id/id_r_i_food_count_tv"
                    android:text="0"
                    android:textColor="@android:color/black"
                    android:minWidth="20dp"
                    android:visibility="visible"
                    android:layout_gravity="center_vertical"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/id_r_i_food_add_tv"
                    android:clickable="true"
                    android:textStyle="bold"
                    android:visibility="visible"
                    android:background="@mipmap/add_icon"
                    android:gravity="center"
                    android:layout_width="20dp"
                    android:layout_height="20dp" />
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>