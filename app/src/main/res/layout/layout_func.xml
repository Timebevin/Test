<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:paddingTop="5dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/fun1"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@mipmap/ic_hg"
                android:layout_width="40dp"
                android:layout_height="40dp" />
            <TextView
                android:text="万家灯火"
                android:textColor="@color/tv_b_gray_color"
                android:textSize="13sp"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/fun2"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@mipmap/ic_tdyp"
                android:layout_width="40dp"
                android:layout_height="40dp" />
            <TextView
                android:text="甜点饮品"
                android:textColor="@color/tv_b_gray_color"
                android:textSize="13sp"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/fun3"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@mipmap/ic_zzc"
                android:layout_width="40dp"
                android:layout_height="40dp" />
            <TextView
                android:text="自助餐"
                android:textColor="@color/tv_b_gray_color"
                android:textSize="13sp"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/fun4"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@mipmap/ic_xckc"
                android:layout_width="40dp"
                android:layout_height="40dp" />
            <TextView
                android:text="小吃快餐"
                android:textColor="@color/tv_b_gray_color"
                android:textSize="13sp"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:paddingTop="5dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/fun5"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@mipmap/ic_xc"
                android:layout_width="40dp"
                android:layout_height="40dp" />
            <TextView
                android:text="西餐"
                android:textColor="@color/tv_b_gray_color"
                android:textSize="13sp"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/fun6"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@mipmap/ic_skkr"
                android:layout_width="40dp"
                android:layout_height="40dp" />
            <TextView
                android:text="烧烤烤肉"
                android:textColor="@color/tv_b_gray_color"
                android:textSize="13sp"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/fun7"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@mipmap/ic_xgky"
                android:layout_width="40dp"
                android:layout_height="40dp" />
            <TextView
                android:text="香锅烤鱼"
                android:textColor="@color/tv_b_gray_color"
                android:textSize="13sp"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/fun8"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@mipmap/ic_hx"
                android:layout_width="40dp"
                android:layout_height="40dp" />
            <TextView
                android:text="海鲜"
                android:textColor="@color/tv_b_gray_color"
                android:textSize="13sp"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>