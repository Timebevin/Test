<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/top_view"
        android:layout_width="match_parent"
        android:layout_height="230dp">
        <com.zt.school.views.CustomJzVideo2
            android:id="@+id/jzvideo"
            android:layout_width="match_parent"
            android:layout_height="230dp"/>
        <LinearLayout
            android:id="@+id/top_back_view"
            android:background="@color/transparent"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <LinearLayout
                android:id="@+id/back_colse_view"
                android:gravity="center"
                android:clickable="true"
                android:layout_width="50dp"
                android:layout_height="50dp">
                <ImageView
                    android:id="@+id/id_base_back_iv"
                    android:src="@mipmap/white_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
   <com.zt.school.views.CustomeScrollView
       android:layout_below="@+id/top_view"
       android:layout_above="@+id/bottom_view"
       android:scrollbars="vertical"
       android:layout_width="match_parent"
       android:layout_height="match_parent">
      <LinearLayout
          android:orientation="vertical"
          android:layout_width="match_parent"
          android:layout_height="match_parent">
          <LinearLayout
              android:id="@+id/video_info_view"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
              <TextView
                  android:id="@+id/id_title_tv"
                  android:maxLines="2"
                  android:ellipsize="end"
                  android:layout_marginTop="20dp"
                  android:layout_marginLeft="20dp"
                  android:layout_marginRight="20dp"
                  android:textSize="14sp"
                  android:textColor="@color/tv_b_gray_color"
                  tools:text="我是标题"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content" />
              <TextView
                  android:id="@+id/see_time_tv"
                  tools:text="1次观看"
                  android:layout_marginLeft="20dp"
                  android:textSize="10sp"
                  android:layout_marginTop="10dp"
                  android:textColor="@color/tv_gray_color"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content" />
              <View
                  android:background="@color/divider_color"
                  android:layout_marginLeft="20dp"
                  android:layout_marginRight="20dp"
                  android:layout_marginTop="10dp"
                  android:layout_marginBottom="10dp"
                  android:layout_width="match_parent"
                  android:layout_height="1px"/>
              <RelativeLayout
                  android:layout_marginLeft="20dp"
                  android:layout_marginRight="20dp"
                  android:layout_marginBottom="10dp"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content">
                  <com.zt.school.views.CircleImageView
                      android:src="@mipmap/logo"
                      android:id="@+id/logo_iv"
                      android:layout_centerVertical="true"
                      android:layout_width="35dp"
                      android:layout_height="35dp" />
                  <TextView
                      android:id="@+id/id_user_name_tv"
                      android:layout_toRightOf="@+id/logo_iv"
                      android:layout_toLeftOf="@+id/zang"
                      android:ellipsize="end"
                      android:layout_marginRight="10dp"
                      android:singleLine="true"
                      tools:text="ZT"
                      android:textSize="13sp"
                      android:layout_centerVertical="true"
                      android:layout_marginLeft="20dp"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content" />
                  <LinearLayout
                      android:id="@+id/zang"
                      android:layout_toLeftOf="@+id/common_tv"
                      android:layout_marginRight="30dp"
                      android:layout_centerVertical="true"
                      android:orientation="vertical"
                      android:gravity="center"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content">
                      <ImageView
                          android:id="@+id/zang_iv"
                          android:src="@mipmap/zang_n"
                          android:layout_width="20dp"
                          android:layout_height="20dp" />
                      <TextView
                          android:id="@+id/zang_tv"
                          android:text="0"
                          android:textSize="11sp"
                          android:textColor="@color/tv_b_gray_color"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content" />
                  </LinearLayout>
                  <LinearLayout
                      android:id="@+id/common_tv"
                      android:orientation="vertical"
                      android:layout_centerVertical="true"
                      android:layout_alignParentRight="true"
                      android:gravity="center"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content">
                      <ImageView
                          android:src="@mipmap/common"
                          android:layout_width="20dp"
                          android:layout_height="20dp" />
                      <TextView
                          android:id="@+id/comment_tv"
                          android:text="0"
                          android:textSize="11sp"
                          android:textColor="@color/tv_b_gray_color"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content" />
                  </LinearLayout>
              </RelativeLayout>
              <View
                  android:background="@color/divider_color"
                  android:layout_width="match_parent"
                  android:layout_height="3dp"/>
              <TextView
                  android:text="精彩评论"
                  android:textSize="12sp"
                  android:textStyle="bold"
                  android:textColor="@color/tv_b_gray_color"
                  android:layout_marginLeft="20dp"
                  android:layout_marginTop="10dp"
                  android:layout_marginBottom="10dp"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content" />
          </LinearLayout>
          <FrameLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent">
              <com.zt.school.utils.CustomListView
                  android:id="@+id/listview"
                  android:scrollbars="none"
                  android:divider="@color/divider_color"
                  android:dividerHeight="1px"
                  android:layout_marginLeft="10dp"
                  android:layout_marginRight="10dp"
                  android:listSelector="@color/transparent"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"/>
              <TextView
                  android:id="@+id/noti_tv"
                  android:visibility="gone"
                  android:text="评论空缺中，赶紧抢个沙发吧!"
                  android:layout_gravity="center"
                  android:textSize="12sp"
                  android:textColor="@color/tv_gray_color"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content" />
          </FrameLayout>
      </LinearLayout>
   </com.zt.school.views.CustomeScrollView>
    <RelativeLayout
        android:id="@+id/bottom_view"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:background="@color/divider_color"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/comment_edit"
            android:layout_toLeftOf="@+id/id_send_tv"
            android:hint="写评论..."
            android:textSize="15sp"
            android:background="@null"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textColor="@color/tv_b_gray_color"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            />
        <com.zt.school.views.MyTextView
            android:id="@+id/id_send_tv"
            android:text="发送"
            android:gravity="center"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            app:normalColor="@color/color_press_tv_color"
            app:pressColor="@color/text_tab_normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</RelativeLayout>