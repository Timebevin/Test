<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/rootview"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/id_ll"
        android:orientation="horizontal"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            android:id="@+id/id_all_cate_tv"
            android:text="分类"
            android:textSize="12sp"
            android:clickable="true"
            android:textColor="#333333"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <View
            android:background="@color/divider_color"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:layout_width="2px"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/id_hot_tv"
            android:text="人气"
            android:textSize="12sp"
            android:textColor="#333333"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <View
            android:background="@color/divider_color"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:layout_width="2px"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/id_comment_tv"
            android:text="评分"
            android:textSize="12sp"
            android:textColor="#333333"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
    </LinearLayout>
    <View
        android:background="@color/divider_color"
        android:layout_width="match_parent"
        android:layout_height="2dp"/>
    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/id_base_smartrefreshlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/divider_color"
        app:srlEnableScrollContentWhenLoaded="true"
        app:srlEnableFooterFollowWhenLoadFinished="true"
        >
        <com.scwang.smartrefresh.layout.header.ClassicsHeader
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srlFinishDuration="500"
            app:srlEnableLastTime="true"
            app:srlTextSizeTitle="12sp"
            app:srlTextSizeTime="10dp"
            app:srlTextTimeMarginTop="2dp"
            app:srlDrawableArrowSize="30dp"
            app:srlDrawableProgressSize="15dp"
            app:srlDrawableMarginRight="20dp"
            app:srlDrawableArrow="@mipmap/refresh_icon"
            />
        <ListView
            android:id="@+id/listview"
            android:scrollbars="none"
            android:dividerHeight="1px"
            android:background="@color/white"
            android:divider="@color/divider_color"
            android:listSelector="@drawable/item_selector"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <com.scwang.smartrefresh.layout.footer.ClassicsFooter
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srlClassicsSpinnerStyle="Translate"
            app:srlTextSizeTitle="12sp"
            app:srlDrawableProgressSize="15dp"
            />
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>
</LinearLayout>