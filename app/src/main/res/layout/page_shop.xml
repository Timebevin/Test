<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:background="#237BE7"
        android:layout_width="match_parent"
        android:layout_height="200dp">
        <com.zt.school.views.CircleImageView
            android:id="@+id/id_photo"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:src="@mipmap/splash"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:civ_border_width="2dp"
            app:civ_border_color="#9000"
            />
        <TextView
            android:id="@+id/id_name"
            android:text="未登录"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/id_photo"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/id_entry_time_tv"
            android:text="商家入住时间"
            android:textSize="11sp"
            android:textColor="@color/white"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/id_name"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <com.zt.school.utils.CustomListView
        android:id="@+id/listview"
        android:scrollbars="none"
        android:divider="@color/divider_color"
        android:dividerHeight="1px"
        android:listSelector="@drawable/item_selector"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>