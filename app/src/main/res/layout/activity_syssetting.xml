<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:id="@+id/top"
        android:background="@color/text_center_tab_selected"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/back_colse_view"
            android:gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_width="35dp"
            android:layout_height="35dp">
            <ImageView
                android:src="@mipmap/icon_close"
                android:scaleType="centerCrop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <TextView
            android:text="系统设置"
            android:textSize="15sp"
            android:layout_centerInParent="true"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_below="@+id/top"
        android:padding="10dp"
        android:background="@color/divider_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="Video模块"
            android:textColor="@color/text_center_tab_selected"
            android:textSize="13sp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <com.suke.widget.SwitchButton
            android:id="@+id/switch_button"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <com.zt.school.views.MyTextView
        android:id="@+id/logout"
        android:text="退出登录"
        android:gravity="center"
        android:textSize="15sp"
        android:textColor="@color/white"
        android:layout_margin="20dp"
        app:normalColor="@color/text_center_tab_selected"
        app:pressColor="@color/register_btn_press_color"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="35dp" />
</RelativeLayout>