<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="#f4f1f1"
    android:layout_height="match_parent">

    <include layout="@layout/layout_common_white_header"/>

    <RelativeLayout
        android:id="@+id/edit_photo_relative"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/item_selector"
        android:clickable="true"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="头像"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:textColor="#454343"
            />
        <com.zt.school.views.CircleImageView
            android:id="@+id/edit_photo_image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@color/divider_color"
            android:layout_toLeftOf="@+id/ic_right"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            />
        <ImageView
            android:id="@+id/ic_right"
            android:layout_width="20dp"
            android:layout_height="25dp"
            android:src="@mipmap/ql_right"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#a5d1a5"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#ffffff"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/gxqm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="商家名称:"
            android:layout_marginLeft="10dp"
            android:textColor="#454343"
            android:layout_marginTop="10dp"
            />
        <EditText
            android:id="@+id/edit_name_Edit"
            android:layout_toRightOf="@+id/gxqm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入商家名称"
            android:textSize="15sp"
            android:maxLines="3"
            android:paddingLeft="3dp"
            android:layout_marginTop="10dp"
            android:background="@null"
            />
    </RelativeLayout>

    <com.zt.school.views.MyTextView
        android:id="@+id/id_save_tv"
        android:text="保存修改"
        android:textColor="@color/white"
        android:gravity="center"
        app:normalColor="@color/register_statue_bar_color"
        app:pressColor="@color/register_btn_press_color"
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="35dp" />
</LinearLayout>