<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/b_gray_color"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="80dp">
        <com.zt.school.views.CircleImageView
            android:id="@+id/profile_image"
            android:layout_centerVertical="true"
            android:layout_width="45dp"
            android:layout_height="45dp"
            app:civ_border_overlay="false"
          />
        <LinearLayout
            android:layout_toRightOf="@+id/profile_image"
            android:layout_toLeftOf="@+id/id_daohan_dianhua_linear"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/id_roder_shop_name"
                tools:text="巴蜀小龙坎老火锅"
                android:singleLine="true"
                android:ellipsize="end"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/id_roder_shop_address"
                android:layout_marginTop="10dp"
                tools:text="福建省宁德市宁德师范学院"
                android:textColor="#666666"
                android:textSize="12sp"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/id_daohan_dianhua_linear"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="150dp">
            <TextView
                android:id="@+id/id_order_daohan_tv"
                android:drawableTop="@mipmap/mclz_daohang"
                android:text="导航"
                android:textSize="12sp"
                android:clickable="true"
                android:drawablePadding="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <View
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:background="@android:color/darker_gray"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="1px"
                android:layout_height="match_parent"/>
            <TextView
                android:id="@+id/id_order_phone_tv"
                android:drawableTop="@mipmap/mclz_dianhua"
                android:text="电话"
                android:clickable="true"
                android:textSize="12sp"
                android:drawablePadding="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <View
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:background="@android:color/darker_gray"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="1px"
                android:layout_height="match_parent"/>
            <TextView
                android:id="@+id/id_order_comment_tv"
                android:drawableTop="@mipmap/icon_comment"
                android:text="评价"
                android:textColor="@color/register_statue_bar_color"
                android:clickable="true"
                android:textSize="12sp"
                android:drawablePadding="1dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>