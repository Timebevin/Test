<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:orientation="vertical"
        android:background="@color/text_center_tab_selected"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <LinearLayout
            android:id="@+id/back_colse_view"
            android:gravity="center"
            android:clickable="true"
            android:layout_width="50dp"
            android:layout_height="50dp">
            <ImageView
                android:id="@+id/id_base_back_iv"
                android:src="@mipmap/white_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <TextView
            android:id="@+id/id_base_title_tv"
            android:text="用户注册"
            android:textSize="15sp"
            android:textColor="@android:color/white"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <View
            android:background="@color/divider_color"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="1px"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_margin="8dp"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            android:text="占"
            android:textSize="12sp"
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="用户名"
            android:textSize="12sp"
            android:textColor="@android:color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/id_register_nick_ed"
            android:hint="请输入用户名(登录使用)"
            android:maxLines="1"
            android:textSize="12sp"
            android:background="@null"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
    <View
        android:background="@color/divider_color"
        android:layout_width="match_parent"
        android:layout_height="2px"/>
    <RelativeLayout
        android:layout_margin="8dp"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            android:id="@+id/id_phone_tv"
            android:text="手机号码"
            android:textSize="12sp"
            android:layout_centerVertical="true"
            android:textColor="@android:color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/id_register_mobile_ed"
            android:layout_toRightOf="@+id/id_phone_tv"
            android:hint="请输入手机号码"
            android:maxLines="1"
            android:textSize="12sp"
            android:inputType="number"
            android:background="@null"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </RelativeLayout>
    <View
        android:background="@color/divider_color"
        android:layout_width="match_parent"
        android:layout_height="2px"/>
    <LinearLayout
        android:layout_margin="8dp"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            android:text="占位"
            android:textSize="12sp"
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="密码"
            android:textSize="12sp"
            android:textColor="@android:color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/id_register_pass_ed"
            android:hint="请输入至少6位数密码"
            android:maxLines="1"
            android:textSize="12sp"
            android:password="true"
            android:background="@null"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
    <View
        android:background="@color/divider_color"
        android:layout_width="match_parent"
        android:layout_height="2px"/>
    <LinearLayout
        android:layout_margin="8dp"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            android:text="确认密码"
            android:textSize="12sp"
            android:textColor="@android:color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/id_register_repass_ed"
            android:hint="请重复输入至少6位数密码"
            android:maxLines="1"
            android:textSize="12sp"
            android:background="@null"
            android:password="true"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

    <View
        android:background="@color/divider_color"
        android:layout_width="match_parent"
        android:layout_height="2px"/>
    <View
        android:background="@color/divider_color"
        android:layout_width="match_parent"
        android:layout_height="2px"/>
    <com.zt.school.views.MyTextView
        android:id="@+id/id_register_btn"
        android:text="注册"
        android:gravity="center"
        app:normalColor="@color/text_center_tab_selected"
        app:pressColor="@color/register_btn_press_color"
        android:layout_margin="20dp"
        android:textColor="@color/white_color"
        android:layout_width="match_parent"
        android:layout_height="35dp" />
</LinearLayout>