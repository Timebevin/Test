<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_above="@+id/add_address_tv"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:orientation="vertical"
            android:id="@+id/id_root_top"
            android:background="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <LinearLayout
                android:id="@+id/back_colse_view"
                android:gravity="center"
                android:clickable="true"
                android:layout_width="50dp"
                android:layout_height="50dp">
                <ImageView
                    android:id="@+id/id_base_back_iv"
                    android:src="@mipmap/black_left_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <TextView
                android:id="@+id/id_base_title_tv"
                android:text="收货地址管理"
                android:textSize="14sp"
                android:typeface="monospace"
                android:textColor="@color/tv_b_gray_color"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <View
            android:background="@color/gray"
            android:layout_width="match_parent"
            android:layout_height="2dp"/>
        <com.scwang.smartrefresh.layout.SmartRefreshLayout
            android:id="@+id/id_base_smartrefreshlayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/divider_color"
            app:srlEnableScrollContentWhenLoaded="true"
            app:srlEnableFooterFollowWhenLoadFinished="true"
            >
            <com.scwang.smartrefresh.layout.header.ClassicsHeader
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srlFinishDuration="500"
                app:srlEnableLastTime="true"
                app:srlTextSizeTitle="12sp"
                app:srlTextSizeTime="10dp"
                app:srlTextTimeMarginTop="2dp"
                app:srlDrawableArrowSize="30dp"
                app:srlDrawableProgressSize="15dp"
                app:srlDrawableMarginRight="20dp"
                app:srlDrawableArrow="@mipmap/refresh_icon"
                />
            <ListView
                android:id="@+id/listview"
                android:dividerHeight="1px"
                android:background="@color/white"
                android:divider="@color/divider_color"
                android:scrollbars="none"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <com.scwang.smartrefresh.layout.footer.ClassicsFooter
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srlClassicsSpinnerStyle="Translate"
                app:srlTextSizeTitle="12sp"
                app:srlDrawableProgressSize="15dp"
                />
        </com.scwang.smartrefresh.layout.SmartRefreshLayout>
    </LinearLayout>
    <com.zt.school.views.MyTextView
        android:id="@+id/add_address_tv"
        android:text="新增收货地址"
        android:textSize="12sp"
        android:gravity="center"
        app:normalColor="@color/color_pink_red"
        app:pressColor="@color/color_pink_red_p"
        app:radius="0dp"
        android:textColor="@color/white"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="40dp" />
</RelativeLayout>